{
  "manifest_version": 2,
  "name": "Grape Jitsi Desktop Streamer",
  "description": "A simple extension that allows you to stream your desktop into meetings with Grape",
  "version": "0.1.6.3",
  "minimum_chrome_version": "34",
  "icons": {
    "16": "grape-video-logo-16x16.png",
    "48": "grape-video-logo-48x48.png",
    "128": "grape-video-logo-128x128.png"
  },
  "background": {
        "scripts": [ "background.js" ],
        "persistent": true
  },
  "permissions": [
      "desktopCapture"
  ],
  "externally_connectable": {
      "matches": [
        "*://*.ubergrape.com/*",
        "*://*.grapecall.com/*"
      ]
  }
}
